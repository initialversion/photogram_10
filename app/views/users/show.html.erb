<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Avatar</dt>
      <dd><img src="<%= @user.avatar %>" class="img-responsive"></dd>

      <dt>Age</dt>
      <dd><%= @user.age %></dd>

      <dt>Birthday</dt>
      <dd><%= @user.birthday %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many votes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Votes
      </li>

      <% @user.votes.each do |vote| %>
        <li class="list-group-item">
          <a href="/votes/<%= vote.id %>">
            <%= vote.fan_id %>
          </a>
          <a href="/votes/<%= vote.id %>" class="btn btn-primary">
            Show
          </a>
          <%if current_user == vote.fan %>
            <a href="/votes/<%= vote.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_vote/<%= vote.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

